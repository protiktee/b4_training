<style>
    .ui-widget-overlay {
        background:#000 !important;
    }
</style>
<script>
    function ShowModal() {
        $('#dvModalEquipment').dialog({
            modal: true
            //,
            //buttons: {
            //    "Ok": function () {
            //        $(this).dialog("close");
            //    },
            //    Cancel: function () {
